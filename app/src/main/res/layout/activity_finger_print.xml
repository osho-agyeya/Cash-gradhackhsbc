<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FingerPrintActivity">

    <TextView
        android:id="@+id/headingLabel"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Meye Bank "
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#008080"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/fingerprintImage"
        android:layout_width="390dp"
        android:layout_height="327dp"
        android:layout_below="@+id/headingLabel"
        android:layout_marginTop="23dp"
        app:srcCompat="@mipmap/new_logo_round"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/paraLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerprintImage"
        android:layout_marginTop="85dp"
        android:padding="20dp"
        android:text="Place your Finger Here"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#008080"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>